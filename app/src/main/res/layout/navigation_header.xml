<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="user"
            type="com.photograph.lo7.entity.User" />
    </data>

    <!-- HomeActivity侧拉导航栏的头部  -->


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="?attr/colorPrimary"
        android:orientation="vertical"
        android:padding="10dp">

        <RelativeLayout
            android:id="@+id/navigation_user_info"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/navigation_pic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                bind:urlCirImg="@{user.pic}"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/navigation_pic"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/navigation_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{user.username}"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/navigation_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="@{user.bio}"
                    android:textSize="13sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/navigation_level"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text='@{String.valueOf(user.level) + " \nLV"}'
                android:textAllCaps="false" />

            <Button
                android:id="@+id/navigation_exp"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text='@{String.valueOf(user.exp) + " \nexp"}'
                android:textAllCaps="false" />


            <Button
                android:id="@+id/navigation_coins"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="false"
                android:text='@{String.valueOf(user.coins) + " \ncoins"}'
                android:textAllCaps="false" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/navigation_moment"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text='@{String.valueOf(user.followCount) + " \nfollow"}'
                android:textAllCaps="false" />

            <Button
                android:id="@+id/navigation_follow"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text='@{String.valueOf(user.followCount) + " \nfollow"}'
                android:textAllCaps="false" />


            <Button
                android:id="@+id/navigation_follower"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text='@{String.valueOf(user.followerCount) + " \nfollower"}'
                android:textAllCaps="false" />


        </LinearLayout>

    </LinearLayout>
</layout>

